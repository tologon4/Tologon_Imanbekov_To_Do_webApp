@model LoginViewModel
@{
    ViewBag.Title = "Вход";
}
<h2>Вход на сайт</h2>

@Html.ValidationSummary(true)
<h3 class="text-center mt-4">Заполните форму, чтобы войти</h3>

<div class="row">
    <div class="col col-4 my-auto mx-auto">
        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" >
            <div class="validation" asp-validation-summary="ModelOnly" ></div>
            <div>
                <div class="mt-3 row">
                    <label for="email">Введите Email<span class="text-danger ms-2" asp-validation-for="Email"></span></label>
                    <div class="input-group">
                        <input asp-for="Email" type="text" class="form-control rounded-1  mt-3" placeholder="введите email" id="email">
                    </div>
                </div>
                <div class="mt-3 row">
                    <label for="password">Название пароль<span class="text-danger ms-2" asp-validation-for="Password"></span></label>
                    <div class="input-group">
                        <input asp-for="Password" type="text" class="form-control rounded-1  mt-3" placeholder="введите пароль" id="password">
                    </div>
                </div>
                <input asp-for="ReturnUrl" type="hidden"/>
                <div class="form-check">    
                    <input class="form-check-input" type="checkbox" asp-for="RememberMe" value="true" id="flexCheckChecked" checked>
                    <label class="form-check-label" for="flexCheckChecked"> Запомнить меня</label>
                </div>
            </div>
            <button type="submit" class="btn btn-success mt-5 px-3"> Войти </button>
        </form>
        <a asp-action="Register" asp-controller="Account" class="btn btn-primary mt-5 px-3">Регистрация</a>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}