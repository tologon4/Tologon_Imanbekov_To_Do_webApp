@model RegisterViewModel

@{
    ViewBag.Title = "Регистрация";
    Layout = "_Layout";
}

@Html.ValidationSummary(true)
<h3 class="text-center mt-4">Заполните форму, чтобы зарегистрироваться</h3>

<div class="row">
    <div class="col col-4 my-auto mx-auto">
        <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly" />
            <div>
                <div class="mt-3 row">
                    <label for="email">Введите Email<span class="text-danger ms-2" asp-validation-for="Email"></span></label>
                    <div class="input-group">
                        <input asp-for="Email" type="text" class="form-control rounded-1  mt-3" placeholder="введите email" id="email">
                    </div>
                </div>
                <div class="mt-3 row">
                    <label for="name">Введите Имя<span class="text-danger ms-2" asp-validation-for="UserName"></span></label>
                    <div class="input-group">
                        <input asp-for="UserName" type="text" class="form-control rounded-1  mt-3" placeholder="введите имя" id="name">
                    </div>
                </div>
                <div class="mt-3 row">
                    <label for="password">Введите пароль<span class="text-danger ms-2" asp-validation-for="Password"></span></label>
                    <div class="input-group">
                        <input asp-for="Password" type="text" class="form-control rounded-1  mt-3" placeholder="введите пароль" id="password">
                    </div>
                </div>
                <div class="mt-3 row">
                    <label for="conPassword">Повторите пароль<span class="text-danger ms-2" asp-validation-for="PasswordConfirm"></span></label>
                    <div class="input-group">
                        <input asp-for="PasswordConfirm" type="text" class="form-control rounded-1  mt-3" placeholder="повторите пароль" id="conPassword">
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success mt-5 px-3">Регистрация</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
